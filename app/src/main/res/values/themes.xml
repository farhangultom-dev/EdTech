<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EdTech" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderDarkTextStyle">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="darkTextStyle12dp">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="darkTextStyle14dp">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="lightTextStyle10dp">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="lightTextStyle12dp">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="lightTextStyle14dp">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="blueTextStyle10dp">
        <item name="android:textColor">@color/blueTextColor</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    
    <style name="greenTextStyle12dp">
        <item name="android:textColor">@color/greenTextStyle</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="greenTextStyle18dp">
        <item name="android:textColor">@color/greenTextStyle</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightTextColor</item>
        <item name="colorControlActivated">@color/goldColor</item>
    </style>

</resources>